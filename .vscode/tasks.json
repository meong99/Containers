{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "containers",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-std=c++11",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${fileDirname}/result"
